<% include partials/header %>
<div class="ui main text container segment">
        <h1>Edit <%=foundCat.name %></h1>
    <form class="ui form" action="/cats/<%= foundCat._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="name">Name</label>
            <input type="text" name="cat[name]" id="name" value="<%=foundCat.name %>">
        </div>
        
        <div class="field">
            <label for="image">Image Url</label>
            <input type="text" name="cat[image]" id="image" value="<%= foundCat.image %>">
        </div>
    
        <div class="field">
            <label for="body">Description</label>
            <textarea name="cat[body]" id="body" cols="30" rows="10"><%=foundCat.body %></textarea>
        </div>
    
        
        <button class="ui basic purple large button">Submit</button>
    </form>
</div>


<% include partials/footer %>