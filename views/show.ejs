<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui main huge header">
        <h1><%= foundCat.name %></h1>
    </div>
    <div class="ui top attached">
        <div class="item">
            <div class="image">
                <img class="ui centered image rounded" src="<%=foundCat.image%>">
            </div>
            <div class="content">
                <div class="meta" style="margin: 1rem;">
                    <span style="color: rgba(0, 0, 0, 0.6);"><%=foundCat.date.toDateString() %></span>
                </div>
        
                <div class="description">
                    <p><%= foundCat.body %></p>
                </div>

                <div class="extra" style="margin: 2rem 1rem;">
                    <a href="/cats/<%=foundCat._id%>/edit">
                        <div class="ui animated fade basic large orange button" tabindex="0">
                            <div class="visible content">Edit</div>
                            <div class="hidden content">
                                <i class="edit icon"></i>
                            </div>
                        </div>
                    </a>
                    <form action="/cats/<%=foundCat._id%>?_method=DELETE" method="POST" style="display: inline">
                            <!-- <div class="ui animated fade basic large red button" tabindex="0">
                                <div class="visible content">Delete</div>
                                <div class="hidden content">
                                    <i class="trash icon"></i>
                                </div>
                            </div> -->
                        
                        <button class="ui animated fade basic large red button" tabindex="0">
                            <div class="visible content">Delete</div>
                            <div class="hidden content">
                                <i class="trash icon"></i>
                            </div>
                        </button>
                        
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="ui main text container segment">
    <div class="ui small comments">
        <div>
            <a class="ui basic green button" href="/cats/<%=foundCat._id%>/comments/new">Add New Comment</a>
        </div>  
        <h3 class="ui dividing header">Comments</h3>
    <%foundCat.posts.forEach(function(comment){ %>
        <div class="comment">
            <a class="avatar" style="color: black">
                <!-- <img src="/images/avatar/small/matt.jpg" alt=""> -->
                <i class="ui large user icon"></i>
            </a>
            <div class="content">
                <a class="author"><%=comment.author%></a>
                <div class="metadata">
                    <%var options = { weekday: 'long', hour: 'numeric', minute: 'numeric', minute: 'numeric' } %>
                    <span class="date"><%=comment.date.toLocaleDateString("en-US", options)%></span>
                </div>
                <div class="text">
                    <%=comment.content%>
                </div>
            </div>
        </div>
    <% }) %>
        
    </div>

</div>

<% include partials/footer%>
