<% include partials/header %>
<div class="ui main text container segment">
        <h1>New Blog</h1>
    <form class="ui form" action="/cats" method="POST">
        <div class="field">
            <label for="name">Name</label>
            <input type="text" name="cat[name]" id="name" placeholder="Name">
        </div>
        
        <div class="field">
            <label for="image">Image Url</label>
            <input type="text" name="cat[image]" id="image" placeholder="Image Url">
        </div>
    
        <div class="field">
            <label for="body">Description</label>
            <textarea name="cat[body]" id="body" cols="30" rows="10"></textarea>
        </div>
    
        
        <button class="ui basic purple large button">Submit</button>
    </form>
</div>


